{
	"name": "voice-dictation",
	"version": "1.0.0",
	"description": "Voice dictation tool with global hotkeys - Electron + React + Pipecat",
	"main": "out/main/index.js",
	"scripts": {
		"dev": "electron-vite dev",
		"build": "electron-vite build",
		"preview": "electron-vite preview",
		"build:win": "electron-vite build && electron-builder --win",
		"build:mac": "electron-vite build && electron-builder --mac",
		"build:linux": "electron-vite build && electron-builder --linux",
		"lint": "biome check --write",
		"typecheck": "tsc --noEmit",
		"check": "pnpm run lint && pnpm run typecheck"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@nut-tree-fork/nut-js": "^4.2.6",
		"@pipecat-ai/client-js": "^1.4.1",
		"@pipecat-ai/client-react": "^1.1.0",
		"@pipecat-ai/voice-ui-kit": "^0.5.0",
		"@pipecat-ai/websocket-transport": "^1.4.0",
		"@tailwindcss/vite": "^4.1.17",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tailwindcss": "^4.1.17"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.7",
		"@types/node": "^24.10.1",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@vitejs/plugin-react": "5.1.1",
		"electron": "^39.2.3",
		"electron-builder": "^26.0.12",
		"electron-vite": "4.0.1",
		"typescript": "^5.9.3",
		"vite": "^7.2.4"
	},
	"build": {
		"appId": "com.voicedictation.app",
		"productName": "Voice Dictation",
		"directories": {
			"output": "release"
		},
		"files": [
			"out/**/*"
		],
		"win": {
			"target": "nsis"
		},
		"mac": {
			"target": "dmg"
		},
		"linux": {
			"target": "AppImage"
		}
	}
}
