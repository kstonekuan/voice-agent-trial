{
	"compilerOptions": {
		"composite": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"outDir": "dist",
		"lib": ["ESNext"]
	},
	"include": ["src/main/**/*", "src/preload/**/*", "electron.vite.config.ts"]
}
